<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/emoji5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        
        android:padding="3dp"
        android:src="@drawable/emoji5"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/emoji1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="32dp"
        
        android:padding="3dp"
        android:src="@drawable/emoji1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/emoji4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="8dp"
        
        android:padding="3dp"
        android:src="@drawable/emoji4"
        app:layout_constraintLeft_toRightOf="@+id/emoji3"
        app:layout_constraintRight_toLeftOf="@+id/emoji5"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/emoji3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        
        android:padding="3dp"
        android:src="@drawable/emoji3"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/emoji2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        
        android:padding="3dp"
        android:src="@drawable/emoji2"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintLeft_toRightOf="@+id/emoji1"
        app:layout_constraintRight_toLeftOf="@+id/emoji3"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>